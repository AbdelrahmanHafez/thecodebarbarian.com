  body
    .navbar.social-links.hidden-sm.hidden-xs
      div.container
        ul.nav.navbar-nav.navbar-right
            li
              a(href="http://www.twitter.com/code_barbarian") twitter
            li
              a(href="http://www.github.com/vkarpov15") github
            li
              a(href="http://thecodebarbarian.com/feed") rss
    
    #nav.navbar
      .container
        .navbar-header
          button.btn.btn-default.navbar-toggle(type="button", data-toggle="collapse", data-target="#home-nav-mobile")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
